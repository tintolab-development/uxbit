{
  "name": "uxbit-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css,scss,html}\"",
    "test": "turbo run test",
    "storybook": "turbo run dev --filter=storybook",
    "storybook:build": "turbo run build --filter=storybook",
    "storybook:build:gh-pages": "pnpm --filter storybook run build:gh-pages",
    "templates": "turbo run dev --filter=templates",
    "lint-staged": "lint-staged",
    "clean": "turbo run clean",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "turbo": "^2.3.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,css,scss,html}": [
      "prettier --write"
    ]
  }
}
